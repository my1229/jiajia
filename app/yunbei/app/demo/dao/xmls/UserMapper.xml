<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="yunbei.app.demo.dao.mappers.IUserMapper">

	<sql id="table">
		user
	</sql>


	<sql id="fileds">
		`id`
		, `name`
		, `pwd`
		, `descr`
		,`add_ts`
		,`update_ts`
	</sql>

	<resultMap id="userRm" type="User">
		<id property="id" column="id" />
		<result property="name" column="name" />
		<result property="pwd" column="pwd" />
		<result property="descr" column="descr" />
		<result property="addTs" column="add_ts" />
		<result property="updateTs" column="update_ts" />
	</resultMap>


	<!-- 单条 -->
	<select id="selectOne" resultMap="userRm" parameterType="map">
		SELECT
		<include refid="fileds" />
		FROM
		<include refid="table" />
		<!-- use${table} -->

		<where>
			<if test="id != null">id=#{id}</if>
			<if test="name != null">AND name=#{name}</if>
			<if test="pwd != null">AND pwd=#{pwd}</if>
			<if test="descr != null">AND descr=#{descr}</if>
		</where>
		limit 0,1
		;
	</select>

	<!-- 批量查询 -->
	<select id="select" resultMap="userRm" parameterType="map">
		SELECT
		<include refid="fileds" />
		FROM
		<include refid="table" />
		<where>
			<if test="name != null">name=#{name}</if>
			<if test="pwd != null">AND pwd=#{pwd}</if>
			<if test="descr != null">AND descr=#{descr}</if>
		</where>
		ORDER BY id DESC
		<if test="offset!=null">limit #{offset},#{limit}</if>
		;
	</select>

	<!-- 计数 -->
	<select id="count" resultType="_long" parameterType="map">
		SELECT
		COUNT(*)
		FROM
		<include refid="table" />
		<where>
			<if test="id != null">id=#{id}</if>
			<if test="name != null">AND name=#{name}</if>
			<if test="pwd != null">AND pwd=#{pwd}</if>
			<if test="descr != null">AND descr=#{descr}</if>
		</where>
		;
	</select>

	<!-- 插入 -->
	<insert id="insert" parameterType="User" useGeneratedKeys="true"
		keyProperty="id">
		INSERT INTO
		<include refid="table" />
		(`name`,
		`pwd`,`descr`,`add_ts`)
		VALUES
		(#{name},#{pwd},#{descr},#{addTs});
	</insert>

	<!-- 批量插入 -->
	<insert id="insertBatch" parameterType="list" useGeneratedKeys="true"
		keyProperty="id">
		<selectKey resultType="long" keyProperty="id" order="BEFORE">
			SELECT
			LAST_INSERT_ID()
		</selectKey>
		INSERT INTO
		<include refid="table" />
		(`name`,
		`pwd`,`descr`,`add_ts`)
		VALUES
		<foreach collection="list" item="item" index="index"
			separator=",">
			(#{item.name},#{item.pwd},#{item.descr},#{item.addTs})
		</foreach>
	</insert>

	<!-- 更新 -->
	<update id="update" parameterType="User">
		UPDATE
		<include refid="table" />
		<set>
			<if test="name != null">name=#{name},</if>
			<if test="pwd != null">pwd=#{pwd},</if>
			<if test="descr != null">descr=#{descr}</if>
		</set>
		WHERE id=#{id}
		;
	</update>

	<!-- 删除 -->
	<delete id="delete" parameterType="map">
		DELETE FROM
		<include refid="table" />
		<where>
			<if test="name != null">`name`=#{name}</if>
		</where>
		;
	</delete>
</mapper>
